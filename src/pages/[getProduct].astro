---
import raw_data from '../db/boycott.json';
import Card from '@components/Card.astro';

const url = new URL(Astro.request.url);
const categoryQuery = url.searchParams.get('category')?.trim();

const filteredProducts = raw_data[categoryQuery] || [];
const isAjaxRequest = Astro.request.headers.get('hx-request');
import BaseLayout from '@layouts/BaseLayout.astro';
import Cate from '@components/Category.astro';
const categories = Object.keys(raw_data);

---
{isAjaxRequest ? (
<div id="products" class="container mx-auto px-4">
  {filteredProducts.length > 0 ? (
    <div class="mb-8">
      {/* Category Header */}
      <div class="bg-gradient-to-br from-red-50 to-red-100 border-l-4 border-red-600 rounded-xl p-6 shadow-lg backdrop-blur-sm mb-8">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 mt-0.5">
            <div class="i-tabler-category h-7 w-7 text-red-600"></div>
          </div>
          <div class="flex-1">
            <h1 class="text-2xl md:text-3xl font-bold text-red-900 mb-2">
              {categoryQuery}
            </h1>
            <p class="text-base text-red-800 leading-relaxed">
              Ditemukan <strong>{filteredProducts.length}</strong> produk dalam kategori ini yang diboikot.
              Hindari untuk membeli produk-produk berikut.
            </p>
          </div>
        </div>
      </div>

      {/* Products Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {filteredProducts.map(product => (
          <Card name={product} category={categoryQuery} description={`Produk dari kategori ${categoryQuery}`} />
        ))}
      </div>
    </div>
  ) : (
    <div class="bg-gradient-to-br from-gray-50 to-gray-100 border-l-4 border-gray-400 rounded-xl p-6 shadow-lg backdrop-blur-sm">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 mt-0.5">
          <div class="i-tabler-alert-circle h-6 w-6 text-gray-600"></div>
        </div>
        <div class="flex-1">
          <h3 class="text-base font-semibold text-gray-900 mb-1">
            Tidak Ada Produk
          </h3>
          <p class="text-sm text-gray-700">
            Tidak ada produk yang ditemukan dalam kategori ini.
          </p>
        </div>
      </div>
    </div>
  )}
</div>
) : (
<BaseLayout>
  <div id="search-result">
    <Cate kategori={categories}/>

    <div id="products" class="container mx-auto px-4 mt-8 mb-12">
      {filteredProducts.length > 0 ? (
        <div class="mb-8">
          {/* Category Header */}
          <div class="bg-gradient-to-br from-red-50 to-red-100 border-l-4 border-red-600 rounded-xl p-6 shadow-lg backdrop-blur-sm mb-8">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 mt-0.5">
                <div class="i-tabler-category h-7 w-7 text-red-600"></div>
              </div>
              <div class="flex-1">
                <h1 class="text-2xl md:text-3xl font-bold text-red-900 mb-2">
                  {categoryQuery}
                </h1>
                <p class="text-base text-red-800 leading-relaxed">
                  Ditemukan <strong>{filteredProducts.length}</strong> produk dalam kategori ini yang diboikot.
                  Hindari untuk membeli produk-produk berikut.
                </p>
              </div>
            </div>
          </div>

          {/* Products Grid */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {filteredProducts.map(product => (
              <Card name={product} category={categoryQuery} description={`Produk dari kategori ${categoryQuery}`} />
            ))}
          </div>
        </div>
      ) : (
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 border-l-4 border-gray-400 rounded-xl p-6 shadow-lg backdrop-blur-sm">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 mt-0.5">
              <div class="i-tabler-alert-circle h-6 w-6 text-gray-600"></div>
            </div>
            <div class="flex-1">
              <h3 class="text-base font-semibold text-gray-900 mb-1">
                Tidak Ada Produk
              </h3>
              <p class="text-sm text-gray-700">
                Tidak ada produk yang ditemukan dalam kategori ini.
              </p>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
)}
