---
interface Props {
  name: string;
  imageUrl: string;
  description: string;
  category?: string;
}
const { name, imageUrl, description, category } = Astro.props;
---

<div
  class="group relative mt-5 mx-auto overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-102 w-full max-w-sm border border-gray-200/50 bg-white"
>
  <!-- Image Container with Overlay -->
  <div class="relative h-64 sm:h-72 overflow-hidden bg-gray-100">
    <img
      alt={name}
      src={imageUrl || "https://fikrah.sarbeh.com/emoj/clipboard_3d.webp"}
      class="absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />

    <!-- Dark Overlay on Hover -->
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

    <!-- BOIKOT Stamp -->
    <div
      class="stamp is-nope mask-image absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10 transition-transform duration-300 group-hover:rotate-12 group-hover:scale-110"
    >
      BOIKOT
    </div>

    <!-- Category Badge -->
    {category && (
      <div class="absolute top-4 right-4 z-20">
        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold bg-red-600 text-white shadow-lg backdrop-blur-sm">
          <div class="i-tabler-tag h-3.5 w-3.5"></div>
          {category}
        </span>
      </div>
    )}
  </div>

  <!-- Card Content -->
  <div class="relative p-5 sm:p-6 bg-white">
    <a
      href=`${Astro.url.origin}/product/searchResult?search=${name}`
      class="group/link"
    >
      <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover/link:text-red-600 transition-colors duration-200 line-clamp-2">
        {name || "Nama Standar"}
      </h3>
    </a>

    <p class="mt-2 text-sm text-gray-600 line-clamp-2 leading-relaxed">
      {description || "Deskripsi Produk"}
    </p>

    <!-- Action Footer -->
    <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
      <div class="flex items-center gap-2 text-xs text-red-600 font-medium">
        <div class="i-tabler-alert-triangle h-4 w-4"></div>
        <span>Produk Diboikot</span>
      </div>

      <a
        href=`${Astro.url.origin}/product/searchResult?search=${name}`
        class="inline-flex items-center gap-1 text-xs font-medium text-gray-700 hover:text-red-600 transition-colors duration-200"
      >
        Lihat Detail
        <div class="i-tabler-arrow-right h-3.5 w-3.5"></div>
      </a>
    </div>
  </div>
</div>
